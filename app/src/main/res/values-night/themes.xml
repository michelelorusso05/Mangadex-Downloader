<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangadexDownloader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F1A750</item>
        <item name="colorPrimaryVariant">#F0A64F</item>
        <item name="colorOnPrimary">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F1A750</item>
        <item name="colorSecondaryVariant">#F0A64F</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">#FF1B1B1B</item>
        <item name="downloadedItemColor">#FF1B1B1B</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="customTranslucentToolbarColor">#A0202020</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:elevation">8dp</item>
