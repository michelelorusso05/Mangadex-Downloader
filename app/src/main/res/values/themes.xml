<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangadexDownloader" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F1A750</item>
        <item name="colorPrimaryVariant">#F0A64F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#F1A750</item>
        <item name="colorSecondaryVariant">#F0A64F</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">#FFF0F0F0</item>
        <item name="downloadedItemColor">#FFF0F0F0</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="customTranslucentToolbarColor">#A0EFEFEF</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.MangadexDownloader.NoActionBar" parent="Theme.MangadexDownloader">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
