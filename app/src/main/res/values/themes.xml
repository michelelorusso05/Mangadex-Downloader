<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MangadexDownloader" parent="Theme.Material3.DayNight">
        <item name="android:colorBackground">@color/very_light_orange</item>
        <item name="colorPrimary">#FCD298</item>
        <item name="colorOnPrimary">#2F0000</item>
        <item name="colorPrimaryContainer">#FCDCAE</item>
        <item name="colorOnPrimaryContainer">#FFBFBF</item>
        <item name="colorSecondary">#F1A750</item>
        <item name="colorOnSecondary">#FFBFBF</item>
        <item name="colorSurface">#fffbfa</item>
        <item name="colorOnSurface">#2F0000</item>
        <item name="android:statusBarColor">#FCD298</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="customTranslucentToolbarColor">#A0FFFFFF</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="toolbarStyle">@style/Theme.Custom.Toolbar</item>

        <item name="cardBackgroundColor">#FFFFEFEF</item>
    </style>

    <style name="Theme.MangadexDownloader.NoActionBar" parent="Theme.MangadexDownloader">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MangadexDownloader.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <item name="postSplashScreenTheme">@style/Theme.MangadexDownloader</item>
        <item name="windowSplashScreenBackground">?android:attr/colorBackground</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Custom.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">#FCD298</item>
    </style>

    <style name="Theme.MangadexDownloader.Fullscreen" parent="Theme.MangadexDownloader.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
</resources>
